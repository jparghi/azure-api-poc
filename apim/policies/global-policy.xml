<policies>
    <inbound>
        <base />
        <set-header name="Ocp-Apim-Trace" exists-action="override">
            <value>true</value>
        </set-header>
        <rate-limit-by-key calls="60" renewal-period="60" increment-condition="@(context.Response != null && context.Response.StatusCode == 200)" counter-key="@(context.Subscription?.Key ?? context.Request.IpAddress)" />
        <quota-by-key calls="1000" renewal-period="86400" counter-key="@(context.Subscription?.Key ?? context.Request.IpAddress)" />
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
        <set-header name="X-RateLimit-Limit" exists-action="override">
            <value>60</value>
        </set-header>
        <set-header name="X-RateLimit-Remaining" exists-action="override">
            <value>@(context.RateLimit.Remaining)</value>
        </set-header>
        <set-header name="X-RateLimit-Reset" exists-action="override">
            <value>@(context.RateLimit.Reset)</value>
        </set-header>
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>
